{
  "name": "nuxt-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky && pnpm echo:husky",
    "echo:husky": "echo 'npx lint-staged' > .husky/pre-commit && echo 'npx --no-install commitlint --edit \"$1\"' > .husky/commit-msg",
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "depoly:test": "pnpm build:test && pm2 start ./pm2.config.js --env test",
    "deploy": "pnpm build && pm2 start ./pm2.config.js"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint . --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@nuxt/devtools": "^1.7.0",
    "@nuxt/eslint": "^0.7.4",
    "@unocss/nuxt": "^0.65.3",
    "@unocss/preset-rem-to-px": "^0.65.3",
    "@vueuse/core": "^12.2.0",
    "@vueuse/nuxt": "^12.2.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "less": "^4.2.1",
    "lint-staged": "^15.2.11",
    "nuxt": "^3.15.0",
    "prettier": "^3.4.2",
    "typescript": "5.7.2",
    "unocss": "^0.65.3",
    "vite-plugin-remove-console": "^2.2.0"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.9.0",
    "nuxt-custom-fetch": "^2.1.2",
    "nuxt-error-and-cache": "^1.3.1",
    "pinia": "^2.3.0"
  }
}
