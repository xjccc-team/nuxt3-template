{
  "name": "nuxt-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky && pnpm echo:husky",
    "echo:husky": "echo 'npx lint-staged' > .husky/pre-commit && echo 'npx --no-install commitlint --edit \"$1\"' > .husky/commit-msg",
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "depoly:test": "pnpm build:test && pm2 start ./pm2.config.js --env test",
    "deploy": "pnpm build && pm2 start ./pm2.config.js"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint . --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@nuxt/devtools": "^2.3.0",
    "@nuxt/eslint": "^1.2.0",
    "@unocss/nuxt": "^66.0.0",
    "@unocss/preset-rem-to-px": "^66.0.0",
    "@vueuse/core": "^13.0.0",
    "@vueuse/nuxt": "^13.0.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "less": "^4.2.2",
    "lint-staged": "^15.5.0",
    "nuxt": "^3.16.0",
    "prettier": "^3.5.3",
    "typescript": "5.8.2",
    "unocss": "^66.0.0",
    "vite-plugin-remove-console": "^2.2.0"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.10.1",
    "nuxt-custom-fetch": "^2.2.0",
    "nuxt-error-and-cache": "^1.3.1",
    "pinia": "^3.0.1"
  }
}
