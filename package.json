{
  "name": "nuxt-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "build:test": "MODE=development nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky && pnpm echo:husky",
    "echo:husky": "echo 'npx lint-staged' > .husky/pre-commit && echo 'npx --no-install commitlint --edit \"$1\"' > .husky/commit-msg",
    "commit": "git-cz",
    "lint": "oxlint --deny-warnings && eslint .",
    "lint:fix": "oxlint --fix && eslint . --fix",
    "deploy:test": "pnpm build:test && pm2 start ./pm2.config.json --env test",
    "deploy": "pnpm build && pm2 start ./pm2.config.json"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,vue}": [
      "oxlint --deny-warnings --fix",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nuxt/devtools": "^2.6.5",
    "@nuxt/eslint": "^1.9.0",
    "@unocss/nuxt": "66.5.1",
    "@unocss/preset-rem-to-px": "66.5.1",
    "@vueuse/core": "^13.9.0",
    "@vueuse/nuxt": "^13.9.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "nuxt": "^4.1.2",
    "oxlint": "^1.16.0",
    "prettier": "^3.6.2",
    "typescript": "5.9.2",
    "unocss": "66.5.1",
    "vite-plugin-remove-console": "^2.2.0"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.11.2",
    "nuxt-custom-fetch": "^4.0.1",
    "pinia": "^3.0.3"
  }
}
