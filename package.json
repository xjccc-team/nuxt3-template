{
  "name": "nuxt-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky init & nuxt prepare && pnpm echo:husky",
    "echo:husky": "echo 'npm run lint' > .husky/pre-commit && echo 'npx --no-install commitlint --edit \"$1\"' > .husky/commit-msg",
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint '**/*.{vue,css,less}'",
    "depoly:test": "pnpm build:test && pm2 start ./pm2.config.js --env test",
    "deploy": "pnpm build && pm2 start ./pm2.config.js",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint . --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nuxt/devtools": "^1.2.0",
    "@nuxt/eslint": "^0.3.10",
    "@unocss/nuxt": "^0.59.4",
    "@unocss/preset-rem-to-px": "^0.59.4",
    "@unocss/transformer-directives": "^0.59.4",
    "@unocss/transformer-variant-group": "^0.59.4",
    "@vueuse/core": "^10.9.0",
    "@vueuse/nuxt": "^10.9.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.1",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.25.0",
    "husky": "^9.0.11",
    "less": "^4.2.0",
    "lint-staged": "^15.2.2",
    "nuxt": "^3.11.2",
    "prettier": "^3.2.5",
    "stylelint": "^16.4.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.4.5",
    "unocss": "^0.59.4",
    "vite-plugin-remove-console": "^2.2.0"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "nuxt-custom-fetch": "^2.0.4",
    "nuxt-error-and-cache": "^1.1.2",
    "pinia": "^2.1.7"
  },
  "pnpm": {
    "overrides": {
      "ofetch": "1.2.1"
    }
  }
}
